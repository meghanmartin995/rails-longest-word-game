<div class="container">
<h1 class="title">New Game</h1>
<div class="letters">
<% @letters.each do |letter| %>
<p class="letter"><%= letter %></p>
<% end  %>
</div>

<div class="form">
<form class= "form-enlarge" action="/score" method=post>
  <label for="">What is the longest word you can find?</label>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input class="textbox" type="text" name="word">
  <input class="submit" type="submit" value="Play">
</form>
</div>
</div>
